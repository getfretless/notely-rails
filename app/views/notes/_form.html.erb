<%= form_for note do |f| %>
  <p>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.text_area :body_html %>
  </p>
  <div class="form-actions">
    <%= f.submit class: 'btn btn-default' %>
    <% if note.persisted? %>
      <%= link_to note,
        method: :delete,
        data: { confirm: 'Are you sure? This cannot be undone.' } do %>
        <i class="fa fa-trash-o"></i>
      <% end %>
    <% end %>
  </div>
<% end %>
